@model MVCArchitecturePractice.Core.Data.Message
@{
    ViewBag.Title = "DetailMessage";
}
<fieldset>
    <legend>Book</legend>
    <div class="book-example panel panel-primary">
        <div class="panel-heading panel-head">Message Detail</div>
        <div class="panel-body">
            <div class="form-horizontal">
                <div class="form-group">
                    @Html.LabelFor(model => model.ID, new { @class = "col-lg-1 control-label" })
                    <div class="col-lg-9">
                        @Html.DisplayFor(model => model.ID, new { @class = "form-control" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Comment, new { @class = "col-lg-1 control-label" })
                    <div class="col-lg-9">
                        @Html.DisplayFor(model => model.Comment, new { @class = "form-control" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.AddedDate, new { @class = "col-lg-1 control-label" })
                    <div class="col-lg-9">
                        @Html.DisplayFor(model => model.AddedDate, new { @class = "form-control" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.ModifiedDate, new { @class = "col-lg-1 control-label" })
                    <div class="col-lg-9">
                        @Html.DisplayFor(model => model.ModifiedDate, new { @class = "form-control" })
                    </div>
                </div>

                @using (Html.BeginForm())
                {
                    <div class="form-group">
                        <div class="col-lg-1"></div>
                        <div class="col-lg-9">
                            @Html.ActionLink("Edit", "CreateEditBook", new { id = Model.ID }, new { @class = "btn btn-primary" })
                            @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-success" })
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</fieldset>
